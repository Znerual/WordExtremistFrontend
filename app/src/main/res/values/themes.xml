<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WordExtremist" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <!-- <item name="colorPrimaryVariant">@color/primary_dark</item> --> <!-- Define if you use it -->
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <!-- <item name="colorSecondaryVariant">@color/secondary_dark</item> --> <!-- Define if you use it -->
        <item name="colorOnSecondary">@color/text_secondary</item> <!-- Or text_on_secondary if different -->

        <!-- Accent color (often used for tinting controls) -->
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/background</item>

        <item name="colorSurface">@color/surface</item> <!-- For cards, dialogs etc. -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/text_on_primary</item> <!-- Assuming white text on your error red -->
        <!-- ADDED FOR M3 COMPATIBILITY -->
        <item name="colorPrimaryContainer">@color/primary_container_light_orange</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container_dark_text</item>
        <item name="colorSecondaryContainer">@color/secondary_container_light_teal</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container_dark_text</item>
        <!-- You might also need tertiary, surface variants etc. if more components complain -->
        <!-- <item name="colorTertiary">@color/your_tertiary_color</item> -->
        <!-- <item name="colorOnTertiary">@color/your_on_tertiary_color</item> -->
        <!-- <item name="colorTertiaryContainer">@color/your_tertiary_container_color</item> -->
        <!-- <item name="colorOnTertiaryContainer">@color/your_on_tertiary_container_color</item> -->

        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/text_primary</item> <!-- Text on subtle gray surface variant -->
        <item name="colorOutline">@color/divider</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="colorOnBackground">@color/text_primary</item> <!-- Text on main background -->
        <item name="colorOnSurface">@color/text_primary</item>   <!-- Text on surfaces like cards -->
        <item name="colorOnErrorContainer">@color/text_primary</item> <!-- Or a specific dark red -->
        <item name="colorErrorContainer">@color/error_container_light_red</item> <!-- Define this in colors.xml e.g. #FFCDD2 -->


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item> <!-- Using darker primary -->

        <!-- Control colors -->
        <item name="colorControlNormal">@color/text_secondary</item> <!-- For icons, unchecked states -->
        <item name="colorControlActivated">?attr/colorPrimary</item>    <!-- For checked states, active tint -->
        <item name="colorControlHighlight">@color/ripple_light_gray</item> <!-- Ripple color -->

        <!-- Ensure shapes are defined if using M3 components extensively -->
        <!--
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent</item>
        -->
    </style>

    <style name="Theme.WordExtremist" parent="Base.Theme.WordExtremist" />
    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.ChipChoiceButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/chip_choice_text_color</item>
        <item name="backgroundTint">@color/chip_choice_background_tint</item>
        <item name="strokeWidth">0dp</item> <!-- Remove the outline stroke -->
        <item name="cornerRadius">20dp</item> <!-- Make it pill-shaped -->
    </style>


    <style name="ProfileStatLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    <style name="ProfileStatValue" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>


