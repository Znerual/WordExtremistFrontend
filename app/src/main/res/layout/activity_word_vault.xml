<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/journal_page_background"
    tools:context=".WordVaultActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?attr/colorPrimaryContainer"
        android:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarWordVault"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="My Creative Journal"
            app:titleTextColor="?attr/colorOnPrimaryContainer"
            app:navigationIcon="?attr/homeAsUpIndicator"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Pedestal Area -->
    <LinearLayout
        android:id="@+id/pedestalArea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Pedestal 2 (Silver/Left) -->
        <LinearLayout
            android:id="@+id/pedestal2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:background="@drawable/gem_word_item_background"
                app:backgroundTint="@color/pedestal_silver"
                android:padding="8dp">
                <TextView
                    android:id="@+id/textViewPedestalWord2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Clever"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/journal_text_primary"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </FrameLayout>
            <View
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:background="@drawable/pedestal_top_shape"
                android:backgroundTint="@color/pedestal_silver"
                android:alpha="0.7"/>
            <TextView
                android:id="@+id/textViewPedestalRank2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#2"
                android:textSize="12sp"
                android:textColor="@color/pedestal_silver"/>
        </LinearLayout>

        <!-- Pedestal 1 (Gold/Center - Taller) -->
        <LinearLayout
            android:id="@+id/pedestal1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="85dp"
                android:background="@drawable/gem_word_item_background"
                app:backgroundTint="@color/pedestal_gold"
                android:padding="10dp">
                <TextView
                    android:id="@+id/textViewPedestalWord1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Brilliant"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/journal_text_primary"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </FrameLayout>
            <View
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:background="@drawable/pedestal_top_shape"
                android:backgroundTint="@color/pedestal_gold"
                android:alpha="0.7"/>
            <TextView
                android:id="@+id/textViewPedestalRank1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#1"
                android:textSize="14sp"
                android:textColor="@color/pedestal_gold"/>
        </LinearLayout>

    <!-- Pedestal 3 (Bronze/Right) -->
        <LinearLayout
            android:id="@+id/pedestal3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:background="@drawable/gem_word_item_background"
                app:backgroundTint="@color/pedestal_bronze"
                android:padding="8dp">
                <TextView
                    android:id="@+id/textViewPedestalWord3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Astute"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/journal_text_primary"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </FrameLayout>
            <View
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:background="@drawable/pedestal_top_shape"
                android:backgroundTint="@color/pedestal_bronze"
                android:alpha="0.7"/>
            <TextView
                android:id="@+id/textViewPedestalRank3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#3"
                android:textSize="12sp"
                android:textColor="@color/pedestal_bronze"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Details Display Area (for clicked pedestal/wheel word) -->
    <LinearLayout
        android:id="@+id/detailsDisplayArea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/details_popup_background"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/pedestalArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewDetailWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Brilliant"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prompt:"
            android:textSize="12sp"
            android:textColor="@color/journal_text_secondary"/>
        <TextView
            android:id="@+id/textViewDetailPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Make it more EXTREME!"
            android:textSize="14sp"
            android:textColor="@color/journal_text_primary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Used in:"
            android:textSize="12sp"
            android:textColor="@color/journal_text_secondary"/>
        <TextView
            android:id="@+id/textViewDetailSentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="The small spark became a brilliant inferno."
            android:textSize="14sp"
            android:textColor="@color/journal_text_primary"/>
    </LinearLayout>

    <!-- Word Wheel Placeholder (Replace with your Custom View) -->
<com.laurenz.wordextremist.views.WordWheelView
    android:id="@+id/wordWheelView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:elevation="10dp"
    app:layout_constraintTop_toBottomOf="@id/detailsDisplayArea"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginHorizontal="0dp"
    tools:background="#E0E0E0"
    tools:layout_height="1000dp"
    tools:layout_width="match_parent"/>

    <!-- Empty State View (Shown if no creative words) -->
<LinearLayout
android:id="@+id/emptyStateView"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center"
android:visibility="gone"
tools:visibility="gone"
app:layout_constraintTop_toBottomOf="@id/appBarLayout"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

<ImageView
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:src="@drawable/ic_empty_journal"
    app:tint="@color/journal_text_secondary"
    android:layout_marginBottom="16dp"/>
<!-- Create ic_empty_journal: an open book/empty chest icon -->

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Your Creative Journal Awaits!"
    android:textSize="18sp"
    android:textColor="@color/journal_text_primary"
    android:layout_marginBottom="8dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Play some games to discover and collect your most brilliant words."
    android:textSize="14sp"
    android:textColor="@color/journal_text_secondary"
    android:gravity="center_horizontal"
    android:paddingHorizontal="32dp"/>
</LinearLayout>
    <TextView
        android:id="@+id/textViewVaultStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>